
@{
    ViewBag.Title = "會員登入";
}

<h2>會員登入</h2>

<form class="form-horizontal" method="post" action="@Url.Action("LoginMember")">
    <div class="form-group">
        <label for="Account" class="col-md-3">帳號</label>
        <div class="col-md-9">
            <input id="Account" name="Account" type="text" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label for="Password" class="col-md-3">密碼</label>
        <div class="col-md-9">
            <input id="Password" name="Password" type="password" class="form-control" />
        </div>
    </div>
    <h3 class="col-md-9 col-md-offset-3 text-danger">@ViewBag.LoginError</h3>
    <div class="form-group">
        <div class="col-md-9 col-md-offset-3">
            <input id="Submit1" type="submit" value="登入" class="btn btn-primary" />
            <input id="Reset1" type="reset" value="Reset" class="btn btn-default" />
        </div>
    </div>

</form>
